# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
[alias]
        co = checkout
        s = status
        logline = log --oneline
        forget  = rm -r --cached .
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        precomposeunicode = true
        pager = diff-so-fancy | less --tabs=4 -RFX
        editor = /usr/bin/vim
        excludesfile = ~/.gitignore
[diff]
        tool = meld
[help]
        autocorrect = 1
[push]
        default = matching
